[
  {
      "family": "openapi-task-defination",
      "name": "openapi-ecs-container",
      "requires_compatibilities": "FARGATE",
      "memory": 2048,
      "cpu": 1024,
      "image" : "184155613568.dkr.ecr.eu-west-1.amazonaws.com/swagger-editor:latest",
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "openapi-devl-cw",
              "awslogs-region": "eu-west-1",
              "awslogs-stream-prefix": "ecs"
          }
      },
      "environment": [
          {
              "name": "oidc_provider_metadata_url",
              "value": "${oidc_provider_metadata_url}"
          },
          {
              "name": "oidc_redirect_uri",
              "value": "${oidc_redirect_uri}"
          },
          {
              "name": "oidc_client_secret",
              "value": "${oidc_client_secret}"
          },
          {
              "name": "oidc_client_scope",
              "value": "${oidc_client_scope}"
          },
          {
              "name": "oidc_crypto_passphrase",
              "value": "${oidc_crypto_passphrase}"
          },
          {
              "name": "oidc_client_id",
              "value": "${oidc_client_id}"
          }
      ],
      "networkMode": "awsvpc",
      "portMappings": [
          {
              "containerPort": 8080,
              "hostPort": 8080,
              "protocol": "tcp"
          }
      ]
  }
]

